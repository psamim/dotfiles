      \, 'coc-emmet', 'coc-fzf-preview', 'coc-json', 'coc-lists', 'coc-highlight', 'coc-pyright'
      \]

function! s:show_documentation()
  if &filetype == 'vim'
    execute 'h '.expand('<cword>')
  else
    call CocActionAsync('doHover')
  endif
endfunction

